{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "全局配置",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "title": {
      "title": "应用标题",
      "type": "string"
    },
    "base": {
      "title": "路由基础路径",
      "type": "string",
      "default": "page"
    },
    "home": {
      "title": "首页路由地址",
      "type": "string"
    },
    "images": {
      "title": "logo、背景等图片",
      "$ref": "#images",
      "default": {}
    },
    "apis": {
      "title": "功能页面可用服务接口查询",
      "$ref": "#api"
    },
    "layout": {
      "title": "布局",
      "$ref": "#layout"
    },
    "encryptMode": {
      "title": "数据加密模式",
      "enum": [
        "rsa",
        "base64"
      ],
      "default": "rsa"
    },
    "pubKey": {
      "title": "数据加密公钥",
      "type": "string"
    },
    "okCode": {
      "title": "接口响应正确时的状态码",
      "type": [
        "string",
        "number"
      ],
      "default": "0"
    },
    "console": {
      "title": "是否在F12控制台打印日志",
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "$schema",
    "title",
    "layout",
    "pubKey"
  ],
  "definitions": {
    "images": {
      "$id": "#images",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "logo": {
          "title": "左上角logo图标地址",
          "type": "string",
          "default": "/assets/images/logo.png"
        },
        "loginBg": {
          "title": "登录页面背景图片",
          "type": "string",
          "default": "/assets/images/login-bg.png"
        }
      }
    },
    "layout": {
      "$id": "#layout",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "navApi": {
          "title": "顶部导航菜单接口",
          "$ref": "#api"
        },
        "menuApi": {
          "title": "左侧导航菜单接口",
          "$ref": "#api"
        },
        "menuWidth": {
          "title": "左侧导航菜单宽度",
          "type": "number",
          "default": 200
        },
        "collapsible": {
          "title": "左侧导航菜单是否可折叠",
          "type": "boolean",
          "default": false
        },
        "menuMode": {
          "title": "左侧导航菜单宽度",
          "enum": [
            "vertical",
            "horizontal",
            "inline"
          ],
          "default": "vertical"
        }
      }
    },
    "api": {
      "$id": "#api",
      "title": "接口配置",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "url": {
          "title": "接口地址",
          "type": "string",
          "minLength": 1
        },
        "method": {
          "title": "接口调用方式",
          "enum": [
            "post",
            "get"
          ],
          "default": "post"
        }
      },
      "required": [
        "url"
      ]
    }
  }
}
